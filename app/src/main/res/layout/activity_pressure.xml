<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".PressureActivity">

    <LinearLayout
        android:id="@+id/linearLayout"
        android:layout_width="0dp"
        android:layout_height="406dp"
        android:layout_marginStart="1dp"
        android:layout_marginTop="61dp"
        android:layout_marginEnd="1dp"
        android:orientation="vertical"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent">

        <EditText
            android:id="@+id/verhDav"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:autoText="false"
            android:ems="10"
            android:hint="@string/strokaDavVerh"
            android:inputType="number" />

        <EditText
            android:id="@+id/nizDav"
            android:layout_width="match_parent"
            android:layout_height="42dp"
            android:ems="10"
            android:hint="@string/strokaDavNiz"
            android:inputType="number" />

        <EditText
            android:id="@+id/editPulse"
            android:layout_width="match_parent"
            android:layout_height="41dp"
            android:ems="10"
            android:hint="@string/strokaPuls"
            android:inputType="number" />

        <EditText
            android:id="@+id/editDate"
            android:layout_width="match_parent"
            android:layout_height="42dp"
            android:ems="10"
            android:hint="@string/strokaData"
            android:inputType="date" />

        <EditText
            android:id="@+id/editText6"
            android:layout_width="match_parent"
            android:layout_height="42dp"
            android:ems="10"
            android:hint="@string/strokaTime"
            android:inputType="time" />

        <TextView
            android:id="@+id/textTah"
            android:layout_width="133dp"
            android:layout_height="40dp"
            android:text="@string/strokaTah" />

        <CheckBox
            android:id="@+id/checkBox3"
            android:layout_width="46dp"
            android:layout_height="42dp" />

        <Button
            android:id="@+id/button"
            android:layout_width="158dp"
            android:layout_height="40dp"
            android:text="@string/btn" />
    </LinearLayout>
</androidx.constraintlayout.widget.ConstraintLayout>